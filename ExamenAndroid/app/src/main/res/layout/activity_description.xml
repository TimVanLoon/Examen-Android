<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.ap.edu.examenandroid.DescriptionActivity">

    <TextView
        android:id="@+id/descrTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descriptionTxtView"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/descrTxtField"
        android:layout_width="346dp"
        android:layout_height="256dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="42dp" />

    <Button
        android:id="@+id/postDescrButton"
        android:layout_width="346dp"
        android:layout_height="53dp"
        android:text="@string/postDescrButton"
        tools:layout_editor_absoluteX="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="141dp" />
</android.support.constraint.ConstraintLayout>
